@{
    ViewData["Title"] = "Sign Up";
    var roles = new List<string>() { "Admin", "Member" };
}

@model SignUpViewModel

<form asp-controller="Identity" asp-action="SignUp" method="post">
    @Html.ValidationSummary()

    <div class="form-group col-4">
        @*Email*@
        <label asp-for="Email">Email:</label>
        <input type="text" asp-for="Email" class="form-control" />

    </div>

    <div class="form-group col-4">
        @*Password*@
        <label asp-for="Password">Password:</label>
        <input type="text" asp-for="Password" class="form-control" />
    </div>

    <div class="form-group col-4">
        @*Password*@
        <label asp-for="Department">Department:</label>
        <input type="text" asp-for="Department" class="form-control" />
    </div>

    <div class="form-group col-4">
        @*Roles*@
        <label asp-for="Roles">Roles:</label>
        @Html.DropDownListFor(x => x.Roles, roles.Select(x => new SelectListItem { Text = x, Value = x }))
    </div>

    <button type="submit" class="btn btn-primary">Signup!</button>

</form>

<div class="alert alert-info">
    If you already have account, please <a asp-action="Signin">Signin</a> here
</div>