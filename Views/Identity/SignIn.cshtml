@model SignInViewModel

<form asp-controller="Identity" asp-action="SignIn" method="post">
    @Html.ValidationSummary()

    <div class="form-group col-4">
        @*Email*@
        <label asp-for="Email">Email:</label>
        <input type="text" asp-for="Email" class="form-control" />
    </div>

    <div class="form-group col-4">
        @*Password*@
        <label asp-for="Password">Password:</label>
        <input type="text" asp-for="Password" class="form-control" />
    </div>

    <div class="">
        <input type="checkbox" asp-for="RememberMe" />Remember Me
    </div>


    <div class="form-group col-4">
        @*Code*@
        <label asp-for="Password">Your login is protected with Authenticator app. Please provide Code(Leave empty if not set) </label>
        <input type="text" asp-for="Code" class="form-control" />
    </div>


    <button type="submit" class="btn btn-primary">Signup!</button>

</form>
